<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="1"
        >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_img_icon"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="tejas010297"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDIT PROFILE"
                    />

            </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        />

    <RelativeLayout
        android:id="@+id/relLay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:layout_weight="19"
        >

        <TextView
            android:id="@+id/user"
            android:layout_below="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="TEJAS PATEL"
            android:gravity="top"

            />

        <View
            android:id="@+id/l2"
            android:layout_below="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            />
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_below="@+id/user"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DESCRIPTION \n\n\n\n\n"
            android:gravity="top"
            android:drawableBottom="@color/colorAccent"

            />

        <LinearLayout
            android:id="@+id/count"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:padding="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="5"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEAM CREATE"
                    android:clickable="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3"
                android:padding="2dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:text="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEAM JOIN"
                    android:clickable="false"
                    />

            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
</LinearLayout>
